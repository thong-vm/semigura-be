@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@using semigura.Commons;
@model semigura.Models.S09003ViewModel
@{
    ViewBag.Title = Localizer["M_S09003"];
}

<link href="@Url.Content(string.Format("~/Content/dev/css/{0}", Utils.GetMinifiedFileName("S09003.css")))" rel="stylesheet" type="text/css">

<!-- Page Heading -->
<div class="d-sm-flex align-items-center justify-content-between mb-4 home_header">
    <h1 class="h3 mb-0 text-gray-800"><i class="bi bi-display" style="margin-right: 3.5px;"></i>@Localizer["M_S09003"]</h1>
</div>

<!-- Content Row -->
<div class="container">
    <div class="manualInput">


        <div class="row">
            <div class="col-md-6 col-sm-12">
                <div class="form-group">
                    <label class="form_label">@Localizer["tankcode"]：</label>
                    <div class="wapper-input">
                        <div class="rowmin col-12">
                            @Html.TextBoxFor(model => model.Code, new { @class = "form-control", @style = "width: 80%;" })
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6 col-sm-12">
                <div class="form-group">
                    <label class="form_label">@Localizer["capacity"]：</label>
                    <div class="wapper-input">
                        <div class="rowmin row col-12">
                            <div class="col-5">
                                @Html.TextBoxFor(model => model.CapSearch_Start, new { @class = "form-control w-100" })
                                @Html.ValidationMessageFor(model => model.CapSearch_Start, "", new { @class = "text-danger" })
                            </div>
                            <label class="form_label" style="margin-right:0px; width:auto;">～</label>
                            <div class="col-5">
                                @Html.TextBoxFor(model => model.CapSearch_End, new { @class = "form-control w-100" })
                                @Html.ValidationMessageFor(model => model.CapSearch_End, "", new { @class = "text-danger" })
                            </div>
                            <label class="form_label" style="margin-right:0px; width:auto;">(l)</label>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6 col-sm-12">
                <div class="form-group">
                    <label class="form_label">@Localizer["height"]：</label>
                    <div class="wapper-input">
                        <div class="rowmin row col-12">
                            <div class="col-5">
                                @Html.TextBoxFor(model => model.HeightSearch_Start, new { @class = "form-control  w-100" })
                                @Html.ValidationMessageFor(model => model.HeightSearch_Start, "", new { @class = "text-danger" })
                            </div>
                            <label class="form_label" style="margin-right:0px; width:auto;">～</label>
                            <div class="col-5">
                                @Html.TextBoxFor(model => model.HeightSearch_End, new { @class = "form-control  w-100" })
                                @Html.ValidationMessageFor(model => model.HeightSearch_End, "", new { @class = "text-danger" })
                            </div>
                            <label class="form_label" style="margin-right:0px; width:auto;">(mm)</label>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row registerBtn">
            <div class="col-md-3 col-sm-12 reggisterButton">
                <button type="submit" class="btn btn-success" onclick="ReloadTable()">
                    <i class="fas fa-check-circle"></i> @Localizer["searchbtn"]
                </button>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12 col-sm-12">
                @Html.ValidationSummary("", new { @class = "text-danger" })
            </div>
        </div>
    </div>
    <div class="tableBlock">
        <div class="row addBlock">
            <button type="button" class="btn btn-warning" onclick="location.href='@Url.Action("Edit", "S09003")'">
                <i class="bi bi-plus-circle"></i> @Localizer["adbtn"]
            </button>
        </div>
        <table id="MainTable" class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>@Localizer["rowno"]</th>
                    <th></th>
                    <th>@Localizer["factory"]</th>
                    <th>@Localizer["location"]</th>
                    <th>@Localizer["tankcode"]</th>
                    <th>@Localizer["capacity"] (l)</th>
                    <th>@Localizer["height"] (mm)</th>
                    <th>@Localizer["createdate"]</th>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
    </div>
</div>

<input id="edit_action_url" type="hidden" value="@Url.Action("Edit", "S09003")" />
<input id="resource_msg_delete_confirm" type="hidden" value="@Localizer["msg_delete_confirm"]" />


<script src="@Url.Content(string.Format("~/Content/dev/js/{0}", Utils.GetMinifiedFileName("S09003.js")))" type="text/javascript"></script>
