@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@using semigura.Commons;
@model semigura.Models.S09001ViewModel
@{
    ViewBag.Title = Localizer["M_S09001"];
}

<link href="@Url.Content(string.Format("~/Content/dev/css/{0}", Utils.GetMinifiedFileName("S09001.css")))" rel="stylesheet" type="text/css">


<!-- Page Heading -->
<div class="d-sm-flex align-items-center justify-content-between mb-4 home_header">
    <h1 class="h3 mb-0 text-gray-800"><i class="bi bi-display" style="margin-right: 3.5px;"></i>@Localizer["M_S09001"]</h1>
</div>



<!-- Content Row -->
<div class="container">
    <div class="manualInput">

        <div class="row">
            <div class="col-md-6 col-sm-12">
                <div class="form-group">
                    <label id="S09001_material" class="form_label">@Localizer["material"]：</label>
                    <div class="wapper-input">
                        @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
                    </div>
                </div>
            </div>
        </div>
        <div class="row registerBtn">
            <div class="col-md-3 col-sm-12 reggisterButton">
                <button type="submit" class="btn btn-success" onclick="ReloadTable()">
                    <i class="fas fa-check-circle"></i> @Localizer["searchbtn"]
                </button>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12 col-sm-12">
                @Html.ValidationSummary("", new { @class = "text-danger" })
            </div>
        </div>
    </div>
    <div class="tableBlock">
        <div class="row addBlock">
            <button type="button" class="btn btn-warning" onclick="location.href='@Url.Action("Edit", "S09001")'">
                <i class="bi bi-plus-circle"></i> @Localizer["addbtn"]
            </button>
        </div>
        <table id="settingTable" class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>@Localizer["rowno"]</th>
                    <th></th>
                    <th>@Localizer["material"]</th>
                    <th>@Localizer["type"]</th>
                    <th>@Localizer["temp_min"]</th>
                    <th>@Localizer["temp_max"]</th>
                    <th>@Localizer["note"]</th>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
    </div>
</div>

<input id="edit_action_url" type="hidden" value="@Url.Action("Edit", "S09001")" />
<input id="resource_msg_delete_confirm" type="hidden" value="@Localizer["msg_delete_confirm"]" />

<script src="@Url.Content("~/Content/bases/vendor/datatables/dataTables.rowsGroup.min.js")"></script>
<script src="@Url.Content(string.Format("~/Content/dev/js/{0}", Utils.GetMinifiedFileName("S09001.js")))" type="text/javascript"></script>
